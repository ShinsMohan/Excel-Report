<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="warehouse_analysis_wizard_view_form" model="ir.ui.view">
        <field name="name">warehouse.analysis.wizard.view.form</field>
        <field name="model">warehouse.analysis.wizard</field>
        <field name="arch" type="xml">
            <form string="Warehouse Analysis Report">
                <sheet>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <footer>
                        <button name="action_warehouse_analysis_report" string="Submit" class="oe_highlight" type="object" />
                    </footer>
                </sheet>                    
            </form>
        </field>
    </record>

    <record id="warehouse_analysis_wizard_action" model="ir.actions.act_window">
        <field name="name">Warehouse Analysis Report</field>
        <field name="res_model">warehouse.analysis.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="warehouse_analysis_wizard_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="warehouse_analysis_report_menu"
        name="Warehouse Analysis Report"
        action="warehouse_analysis_wizard_action"
        parent="stock.menu_warehouse_report"
        sequence="10"/>
</odoo>

